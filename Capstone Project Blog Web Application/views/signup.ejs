<%- include("header.ejs") %>


<section class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">Welcome to BlogPost</h1>
        <p class="col-lg-10 fs-4 my-5">Your search for blogging sites ends here because you found the best one. Congrats you're among the 100% of world population who agree that BlogPost is the best blogging website.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-body-tertiary" action="/addUser" method="post">
          <small class="text-body-secondary">Already have an account? <a href="/signIn">Sign In</a></small>
          <div class="horizontal-flexbox">
            <div class="form-floating mb-3 mt-3">
              <input type="text" class="form-control floatingInput" name="fname" placeholder = "" required>
              <label for="fname">First Name</label>
            </div>
            <div class="form-floating mb-3 mt-3">
              <input type="text" class="form-control floatingInput" name="lname" placeholder = "">
              <label for="lname">Last Name</label>
            </div>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control floatingInput" name="uname" placeholder = "" required>
            <label for="uname">Username</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control floatingPassword" placeholder="Password" name="pwd" required>
            <label for="pwd">Password</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" class="form-control floatingPassword" placeholder="Confirm Password" name="cnfpwd" required>
            <label for="cnfpwd">Confirm Password</label>
          </div>
          <% if (error) { %>
            <p id="error-message"><%= errorMessage %></p>
          <% } %>
          <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
        </form>
      </div>
    </div>
  </section>


<%- include("footer.ejs") %>